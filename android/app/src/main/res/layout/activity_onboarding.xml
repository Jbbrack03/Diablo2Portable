<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/diablo_black">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Diablo II Portable"
        style="@style/DiabloTitle"
        android:layout_marginBottom="32dp" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Lord of Terror awaits..."
        style="@style/DiabloSubtitle"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Sanctuary"
        style="@style/DiabloButton" />
        
    <TextView
        android:id="@+id/help_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help finding your game files?"
        style="@style/DiabloText"
        android:layout_marginTop="24dp"
        android:textColor="@color/diablo_gold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>