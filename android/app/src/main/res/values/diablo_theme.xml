<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Diablo II inspired theme -->
    <style name="DiabloTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary colors inspired by Diablo II UI -->
        <item name="colorPrimary">#8B0000</item> <!-- Dark red -->
        <item name="colorPrimaryDark">#660000</item> <!-- Darker red -->
        <item name="colorAccent">#FFD700</item> <!-- Gold -->
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/diablo_black</item>
        <item name="android:colorBackground">@color/diablo_black</item>
    </style>
    
    <!-- Text styles -->
    <style name="DiabloTitle">
        <item name="android:textColor">@color/diablo_gold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/diablo_dark_red</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
    <style name="DiabloSubtitle">
        <item name="android:textColor">@color/diablo_light_brown</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DiabloText">
        <item name="android:textColor">@color/diablo_light_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Button styles -->
    <style name="DiabloButton">
        <item name="android:background">@drawable/diablo_button_background</item>
        <item name="android:textColor">@color/diablo_gold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Progress bar style -->
    <style name="DiabloProgressBar">
        <item name="android:progressDrawable">@drawable/diablo_progress</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
    
    <!-- Colors -->
    <color name="diablo_black">#1A0F0A</color>
    <color name="diablo_dark_red">#8B0000</color>
    <color name="diablo_red">#CD2626</color>
    <color name="diablo_gold">#FFD700</color>
    <color name="diablo_light_brown">#D2691E</color>
    <color name="diablo_dark_brown">#654321</color>
    <color name="diablo_light_gray">#C0C0C0</color>
    <color name="diablo_dark_gray">#696969</color>
</resources>